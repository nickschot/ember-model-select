{{#docs-hero
  logo="ember"
  slimHeading="Ember"
  strongHeading="Model Select"
  byline="An ember-cli addon to provide a searchable model select box with infinite scroll support."
}}
  {{#docs-demo as |demo|}}
    {{#demo.example name="landing-demo.hbs" class="docs-text-left docs-text-black"}}
      {{model-select
        placeholder="Try me!"
        modelName="user"
        labelProperty="name"
        selectedModel=indexUser
        onchange=(action (mut indexUser))

        allowClear=true
        searchProperty="filter"
        searchKey="search"
      }}
    {{/demo.example}}
  {{/docs-demo}}
{{/docs-hero}}